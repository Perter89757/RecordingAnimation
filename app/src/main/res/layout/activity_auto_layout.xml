<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_unread_msg_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/head"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/unread_count_bg"
        android:gravity="center"
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/xiaoke_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="刘小新"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/xiaoke_people_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:text="消客:566人"
        android:textColor="#656565"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/xiaoke_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:text="手机:15511223564"
        android:textColor="#656565"
        android:textSize="15sp" />

    <TextView

        android:id="@+id/xiaoke_saleprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xiaoke_phone"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:text="销售:￥8，653.00"
        android:textColor="#656565"
        android:textSize="15sp" />

</RelativeLayout>