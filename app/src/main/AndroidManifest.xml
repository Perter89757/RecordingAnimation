<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yiguo.recordinganimation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ThinkiveApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="theme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TimeOutActivity" />
        <activity android:name=".ConstraintLayout_Activity" />
        <activity android:name=".View.UserViewActivity" />
        <activity android:name=".EmojiActivity" />
        <activity android:name=".CallBackActivity" />
        <activity android:name=".popwindows.PopWindowActivity" />
        <activity android:name=".Switch.SwitchActivity" />
        <activity android:name=".Switch.ViewActivity" />
        <activity android:name=".Switch.CollapseViewActivity" />
        <activity android:name=".Switch.MeasureActivity" />
        <activity
            android:name=".Switch.BarActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/NoActionBar"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".HooliganActivity" />
        <activity android:name=".Service.ServiceActivity" />
        <activity
            android:name=".ChenjinActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".AIDLActivity" />
        <activity android:name=".mqtt.MQTTActivity"></activity>


        <service
            android:name=".Service.PushService"
            android:enabled="true"
            android:exported="true"
            android:process=":push" />
        <service
            android:name=".Service.RemoteService.RemoteService"
            android:process=":remote" />
        <service
            android:name="com.yiguo.recordinganimation.Service.loadServiceData.DouBanService"
            android:process=":douban" />
        <service
            android:name=".Service.loadServiceData.RequstDataService"
            android:process=":douban" />
        <service android:name=".Service.loadServiceData.ResponseDataIntentService" />


        <receiver
            android:name="com.yiguo.recordinganimation.Service.loadServiceData.ResponeDataBroadcardReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <!--<action android:name="[包名].push.action.NEW_MESSAGE"/>-->
                <action android:name="com.yiguo.recordinganimation.douban.action.NEW_MESSAGE" />
                <action android:name="com.yiguo.recordinganimation.douban.action.NEW_CMD_MESSAGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>